{
  "name": "Bastion",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Take control of your data!",
  "homepage_url": "https://duck-and-windmill.github.io/Bastion/",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "cookies",
    "history",
    "idle",
    "tabs",
    "https://*/",
    "http://*/"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/",
        "http://*/"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}